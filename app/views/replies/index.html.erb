<h1>返信内容</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>本文</th>
      <th>操作</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <th><%= @opinion.title %></th>
        <td><%= @opinion.text %></td>
      </tr>
      <% @replylist.each do |reply| %>
      <tr>
        <td><%= reply.id %></td>
        <td><%= reply.text %></td>
        <td><%= link_to '修正', edit_opinion_reply_path(@opinion,reply) %></td>
        <td><%= link_to '消去'%></td>
      </tr>
      <% end %>
  </tbody>
</table>
<%= render 'replies/reply' %>
<br>
