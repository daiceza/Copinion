<div class="form">
    <%= form_for(@reply, url: opinion_reply_path) do |f| %>
      <div class="form-group">
        <label>返信内容</label>
        <%= f.text_area :text %>
      </div>
      <%= f.hidden_field :opinion_id,:value => @opinion.id %>
      <%= f.submit "投稿する", class: "btn btn-primary" %>
    <% end %>
</div>